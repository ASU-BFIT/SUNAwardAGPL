{
  "compileOnSave": false,
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./scripts/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
